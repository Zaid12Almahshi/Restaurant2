@model Restaurant.ViewModels.MasterItemMenuModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="card-title">Edit</h1>
<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="MasterItemMenu" asp-action="Index">MasterItemMenu</a></li>
        <li class="breadcrumb-item active"><a asp-controller="MasterItemMenu" asp-action="Edit">Edit</a></li>
    </ol>
</nav>
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">MasterItemMenu</h5>
                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Edit" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="MasterItemMenuId" />
                                <div class="form-group">
                                    <label asp-for="MasterCategoryMenuId" class="col-sm-12 col-form-label"></label>
                                    <select asp-for="MasterCategoryMenuId" class="form-control" asp-items=@(new SelectList(ViewBag.listMasterCategoryMenu,"MasterCategoryMenuId","MasterCategoryMenuName"))></select>
                                    <span asp-validation-for="MasterCategoryMenuId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="MasterItemMenuTitle" class="col-sm-12 col-form-label"></label>
                                    <input asp-for="MasterItemMenuTitle" class="form-control" />
                                    <span asp-validation-for="MasterItemMenuTitle" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="MasterItemMenuBreef" class="col-sm-12 col-form-label"></label>
                                    <input asp-for="MasterItemMenuBreef" class="form-control" />
                                    <span asp-validation-for="MasterItemMenuBreef" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="MasterItemMenuDesc" class="col-sm-12 col-form-label"></label>
                                    <input asp-for="MasterItemMenuDesc" class="form-control" />
                                    <span asp-validation-for="MasterItemMenuDesc" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="MasterItemMenuPrice" class="col-sm-12 col-form-label"></label>
                                    <input asp-for="MasterItemMenuPrice" class="form-control" />
                                    <span asp-validation-for="MasterItemMenuPrice" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="File" class="col-sm-12 col-form-label"></label>
                                    <input asp-for="File" class="form-control" />
                                    <span asp-validation-for="File" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="MasterItemMenuImageUrl" class="col-sm-12 col-form-label" hidden="hidden"></label>
                                    <input asp-for="MasterItemMenuImageUrl" class="form-control" hidden="hidden" />
                                    <span asp-validation-for="MasterItemMenuImageUrl" class="text-danger" hidden="hidden"> </span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="MasterItemMenuImageUrl" class="col-sm-12 col-form-label"></label>
                                    <img src="~/Images/MasterItemMenu/@Model.MasterItemMenuImageUrl" style="max-width:50px" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="MasterItemMenuDate" class="col-sm-12 col-form-label"></label>
                                    <input asp-for="MasterItemMenuDate" class="form-control" />
                                    <span asp-validation-for="MasterItemMenuDate" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                                    </label>
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<div>
    <a asp-action="Index">Back to List</a>
</div>

