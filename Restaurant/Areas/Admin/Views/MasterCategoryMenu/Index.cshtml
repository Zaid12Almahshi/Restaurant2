@model IEnumerable<Restaurant.Models.MasterCategoryMenu>

@{
    ViewData["Title"] = "Index";
}

<h1 class="card-title">MasterCategoryMenu</h1>

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="MasterCategoryMenu" asp-action="Index">MasterCategoryMenu</a></li>

    </ol>
</nav>
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">

                    <p></p>
                    <p>
                        <a class="btn btn-primary" asp-action="Create">Create New</a>
                    </p>
                    <table class="table datatable">
                        <thead>
                            <tr>


                                <th>
                                    @Html.DisplayNameFor(model => model.MasterCategoryMenuName)
                                </th>


                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.MasterCategoryMenuName)
                                    </td>



                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.MasterCategoryMenuId"><i class="bi bi-pencil-square"></i></a> |
                                        <a asp-action="Details" asp-route-id="@item.MasterCategoryMenuId"><i class="fa-fa-sharp fa-solid fa-circle-info"></i></a> |
                                        <a asp-action="Delete" asp-route-id="@item.MasterCategoryMenuId" data-bs-toggle="modal" data-bs-target="#basicModal">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-x" viewBox="0 0 16 16">
                                                <path d="M6.854 7.146a.5.5 0 1 0-.708.708L7.293 9l-1.147 1.146a.5.5 0 0 0 .708.708L8 9.707l1.146 1.147a.5.5 0 0 0 .708-.708L8.707 9l1.147-1.146a.5.5 0 0 0-.708-.708L8 8.293 6.854 7.146z" />
                                                <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2zM9.5 3A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5v2z" />
                                            </svg>
                                        </a>
                                        @if (item.IsActive == true)
                                        {
                                            <a asp-action="Active" asp-route-id="@item.MasterCategoryMenuId">
                                                <i class="fa-fa-sharp fa-solid fa-eye"></i>

                                            </a>
                                        }
                                        else if (item.IsActive == false)
                                        {
                                            <a asp-action="Active" asp-route-id="@item.MasterCategoryMenuId">
                                                <i class="fa-fa-sharp fa-solid fa-eye-slash"></i>

                                            </a>
                                        }
                                        <a class="btnDelete" href="#" data-bs-toggle="modal" data-bs-target="#basicModal"
                                       data-path="@Url.ActionLink("Delete","MasterCategoryMenu",new{id=item.MasterCategoryMenuId})">Delete</a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</section>


<div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure to delete this informatio??
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnConfirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div><!-- End Basic Modal-->
